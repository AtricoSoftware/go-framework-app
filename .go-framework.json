{
  "name": "rubik-tool",
  "summary": "A small tool for rubik's cube related stuff",
  "description": "Rubik's cube tool",
  "repository": "github.com/AtricoSoftware/rubik-tool",
  "commands": [
    {
      "name": "show",
      "description": "Show state of cube"
    }
  ],
  "settings": [
    {
      "name": "position",
      "description": "Current cube position",
      "type": "string",
      "cmdline": "position",
      "cmdlineShortcut": "p",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "verbose",
      "description": "Output all stages of operation",
      "type": "bool",
      "cmdline": "verbose",
      "cmdlineShortcut": "v",
      "appliesTo": [
        "root"
      ]
    }
  ],
  "libraries": [
    "github.com/atrico-go/core",
    "github.com/atrico-go/console",
    "github.com/atrico-go/display"
  ]
}