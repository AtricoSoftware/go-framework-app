{
  "Application": {
    "Title": "Go app framework generator",
    "Name": "go-framework",
    "Summary": "Framework for go applications",
    "Description": "Tool for generating go applications",
    "Repository": "github.com/AtricoSoftware/go-framework-app"
  },
  "Commands": [
    {
      "Name": "generate",
      "Description": "Generate framework app"
    }
  ],
  "UserSettings": [
    {
      "Name": "Single read configuration",
      "Id": "Config.SingleReadConfig",
      "Description": "Configuration is only read once (at startup)",
      "Type": "bool",
      "DefaultVal": "true",
      "AppliesTo": [
        "root"
      ]
    },
    {
      "Name": "Target directory",
      "Id": "Config.TargetDirectory",
      "Description": "Target directory",
      "Type": "string",
      "DefaultVal": ".",
      "Cmdline": "directory",
      "CmdlineShortcut": "d",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "Application title",
      "Id": "Application.Title",
      "Description": "Name of application",
      "Type": "string",
      "Cmdline": "title",
      "CmdlineShortcut": "t",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "Application name",
      "Id": "Application.Name",
      "Description": "Name of application",
      "Type": "string",
      "Cmdline": "name",
      "CmdlineShortcut": "n",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "Application summary",
      "Id": "Application.Summary",
      "Description": "Summary description of application",
      "Type": "string",
      "Cmdline": "summary",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "Application description",
      "Id": "Application.Description",
      "Description": "Description of application",
      "Type": "string",
      "Cmdline": "description",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "RepositoryPath",
      "Id": "Application.Repository",
      "Description": "Path to repository",
      "Type": "string",
      "Cmdline": "repository",
      "CmdlineShortcut": "r",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "Commands",
      "Id": "Commands",
      "Description": "Commands to add",
      "Type": "[]UserCommand",
      "AppliesTo": [
        "generate"
      ]
    },
    {
      "Name": "UserSettings",
      "Id": "UserSettings",
      "Description": "Settings to add",
      "Type": "[]UserSetting",
      "AppliesTo": [
        "generate"
      ]
    }
  ]
}
