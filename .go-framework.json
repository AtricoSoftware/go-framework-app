{
  "name": "platform-importer",
  "repository": "dev.azure.com/MAT-OCS/ConditionInsight/_git/ma.ci.platform.importer",
  "commands": [
    {
      "name": "import",
      "description": "Import files into the platform"
    },
    {
      "name": "ingest",
      "description": "Ingest files from S3 into the platform"
    }
  ],
  "settings": [
    {
      "name": "bucketName",
      "description": "Name of bucket",
      "type": "string",
      "cmdline": "bucketName",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "bucketRole",
      "description": "Role with permission to read bucket",
      "type": "string",
      "cmdline": "bucketRole",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "namespace",
      "description": "Kubernetes namespace",
      "type": "string",
      "cmdline": "namespace",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "timeout",
      "description": "Timeout whilst waiting for completion",
      "type": "string",
      "cmdline": "timeout",
      "defaultVal": "5m",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "verbose",
      "description": "Verbose output",
      "type": "bool",
      "cmdline": "verbose",
      "cmdlineShortcut": "v",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "bucketFolder",
      "description": "Folder (in S3 bucket) containing files to ingest",
      "type": "string",
      "cmdline": "bucketFolder",
      "defaultVal": ".",
      "appliesTo": [
        "ingest"
      ]
    },
    {
      "name": "inputFolder",
      "description": "Folder containing files to import",
      "type": "string",
      "cmdline": "inputFolder",
      "cmdlineShortcut": "f",
      "defaultVal": ".",
      "appliesTo": [
        "import"
      ]
    }
  ]
}