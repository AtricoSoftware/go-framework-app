{
  "name": "kube-tool",
  "summary": "A small tool to automate some kubectl commands",
  "description": "Helper for kubernetes",
  "repository": "dev.azure.com/MAT-OCS/ConditionInsight/_git/ma.ci.tools.kube-tool",
  "commands": [
    {
      "name": "pod-state",
      "description": "Check that pods are ready"
    }
  ],
  "settings": [
    {
      "name": "namespace",
      "description": "Kubernetes namespace",
      "type": "string",
      "cmdline": "namespace",
      "cmdlineShortcut": "n",
      "appliesTo": [
        "root"
      ]
    },
    {
      "name": "podlist",
      "description": "Text file containing list of pods to check",
      "type": "string",
      "cmdline": "pod-list",
      "cmdlineShortcut": "f",
      "appliesTo": [
        "pod-state"
      ]
    },
    {
      "name": "delay",
      "description": "Delay between attempts (seconds)",
      "type": "int",
      "cmdline": "delay",
      "cmdlineShortcut": "d",
      "defaultVal": "60",
      "appliesTo": [
        "pod-state"
      ]
    },
    {
      "name": "maxtries",
      "description": "Maximum number of attempts",
      "type": "int",
      "cmdline": "max-tries",
      "cmdlineShortcut": "c",
      "defaultVal": "10",
      "appliesTo": [
        "pod-state"
      ]
    }
  ],
  "libraries": [
  ]
}