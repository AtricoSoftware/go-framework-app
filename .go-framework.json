{
  "directory": "D:/temp/go-framework-app",
  "title": "Go app framework generator",
  "name": "go-framework",
  "summary": "Framework for go applications",
  "description": "Tool for generating go applications",
  "repository": "github.com/AtricoSoftware/go-framework-app",
  "commands": [
    {
      "name": "generate",
      "description": "Generate framework app"
    }
  ],
  "settings": [
    {
      "name": "Target directory",
      "id": "directory",
      "description": "Target directory",
      "type": "string",
      "defaultVal": ".",
      "cmdline": "directory",
      "cmdlineShortcut": "d",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Application title",
      "id": "Application.Title",
      "description": "Name of application",
      "type": "string",
      "cmdline": "title",
      "cmdlineShortcut": "t",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Application name",
      "id": "Application.Name",
      "description": "Name of application",
      "type": "string",
      "cmdline": "name",
      "cmdlineShortcut": "n",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Application summary",
      "id": "Application.Summary",
      "description": "Summary description of application",
      "type": "string",
      "cmdline": "summary",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Application description",
      "id": "Application.Description",
      "description": "Description of application",
      "type": "string",
      "cmdline": "description",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "RepositoryPath",
      "id": "Application.Repository",
      "description": "Path to repository",
      "type": "string",
      "cmdline": "repository",
      "cmdlineShortcut": "r",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Commands",
      "id": "Commands",
      "description": "Commands to add",
      "type": "[]UserCommand",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "UserSettings",
      "id": "UserSettings",
      "description": "Settings to add",
      "type": "[]UserSetting",
      "appliesTo": [
        "generate"
      ]
    },
    {
      "name": "Libraries",
      "id": "Libraries",
      "description": "Libraries to get",
      "type": "map[string]string",
      "appliesTo": [
        "generate"
      ]
    }
  ],
  "libraries": [
    "github.com/atrico-go/core"
  ]
}
